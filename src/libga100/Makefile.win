#
# Macro definitions
#
CC=gcc
CFLAGS=-g
INCDIR=c:\mingw32\include
LIBDIR=c:\mingw32\lib
TARGETS=libGA.a
#
# Files in LibGA
#
GALIB=ga.o select.o cross.o mutate.o replace.o function.o config.o \
      pool.o chrom.o report.o

#
# Default target
#
all: $(TARGETS)

#
# How to make .c into .o
#
.c.o: ga.h
	$(CC) $(CFLAGS) -c $<

#
# LibGA
#
libGA.a: $(GALIB)
	ar cr libGA.a $(GALIB)
	ranlib libGA.a

#
# Clean
#
clean:
	del /F /Q *.o
	del /F /Q core

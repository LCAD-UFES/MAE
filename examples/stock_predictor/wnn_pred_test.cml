int NUM_WEEKS;
NUM_WEEKS = GetNumWeeks (0);

int SAMPLES2TEST; 		
SAMPLES2TEST = 60;

/* Samples to discard after everything. Allows leaving data to the final test. */
int SAMPLES2DISCARD_AFTER;
SAMPLES2DISCARD_AFTER = 0;

int SAMPLES2TRAIN; 		
SAMPLES2TRAIN = 265 - SAMPLES2TEST - SAMPLES2DISCARD_AFTER - 4;

int SAMPLES2CALIBRATE; 		
SAMPLES2CALIBRATE = 0;


/* Network Status */
int TRAINING_PHASE;
TRAINING_PHASE = 1;
int RECALL_PHASE;
RECALL_PHASE = 2;

/* Counters */
int i;

ResetStatistics (0);

/* Training Phase */
SetNetworkStatus (TRAINING_PHASE);
i = NUM_WEEKS - SAMPLES2DISCARD_AFTER - SAMPLES2TEST - SAMPLES2CALIBRATE - SAMPLES2TRAIN;
while (i < NUM_WEEKS - SAMPLES2DISCARD_AFTER - SAMPLES2TEST - SAMPLES2CALIBRATE)
{
	GetSample (i);
	
	forward network;
	
	/* Draws nl_wnn_pred layer output */
	draw nl_wnn_pred_out based on sample move;

	train network;
	
	i = i + 1;
}

	
/* Calibrating phase */
SetNetworkStatus (RECALL_PHASE);
#i = 0;
while (i < NUM_WEEKS - SAMPLES2DISCARD_AFTER - SAMPLES2TEST)
{
	GetSample(i);
	
	forward network;
	
	/* Draws nl_wnn_pred layer output */
	draw nl_wnn_pred_out based on sample move;
	train network;
	
	i = i + 1;
}

	
/* Testing phase */
SetNetworkStatus (RECALL_PHASE);
#i = 0;
while (i < NUM_WEEKS - SAMPLES2DISCARD_AFTER)
{
	GetSample(i);
	
	forward network;
	
	/* Draws nl_wnn_pred layer output */
	draw nl_wnn_pred_out based on sample move;
	train network; 
	
	i = i + 1;
}

ShowStatistics (0);

quit; 

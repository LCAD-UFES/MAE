/* Counters */
int i;
int FIRST_TRAFFIC_SIGN_TYPE;
int NUM_MANDATORY_TRAFFIC_SIGN_TYPES;
int NUM_IMAGES;
int NUM_IMAGES_TOTAL;
int NUM_OFFSET;
int NUM_MAQUINAS;
int TOTAL_IMAGES_OFFSET;
int inicio_offset;
int x;
int y;
int delta_move;
float scale_factor;

/* Trainning */
SetCriterion(3);
SetNetworkStatus(TRAINING_PHASE);

FIRST_TRAFFIC_SIGN_TYPE = 0;
NUM_MANDATORY_TRAFFIC_SIGN_TYPES = 4;
i = FIRST_TRAFFIC_SIGN_TYPE;
while (i < (FIRST_TRAFFIC_SIGN_TYPE + NUM_MANDATORY_TRAFFIC_SIGN_TYPES))
{
	GetBestMandatoryTrafficSign(i, 0, 299);
	TrainTrafficSign(0);
	i = i + 1;
}


/* Testing */
SetNetworkStatus(RECALL_PHASE);

SetCriterion(-1); /* NONE */

NUM_IMAGES = GetNumImages(0);
i = 0;
while (i < NUM_IMAGES)
{
	GetImage(i);
	scale_factor = 35.0 / 128.0;
	while (scale_factor < (35.0 / 16.0)) 
	{
		SetScaleFactor(scale_factor);
		delta_move = GetDeltaMove(0);
		upper_y = (scale_factor / (35.0 / 16.0)) * 500.0 - 62;
		lower_y = (scale_factor / (35.0 / 16.0)) * 150.0 - 18;
		y = delta_move / 2 + lower_y;
		while (y < (800 - upper_y))
		{
			x = delta_move;
			while (x < 1360)
			{
				MoveToPoint(x, y);
				key s;
				CheckTrafficSignDetection(0);
				x = x + delta_move;
			}
			y = y + delta_move;
		}
		scale_factor = scale_factor * 1.2;
	}
	i = i + 1;
}
quit;
